{
    "compilerOptions": {
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "target": "ES2020",
      "sourceMap": false,
      "outDir": "build"
    },
    "include": ["src/**/*"],
    "exclude": [
      "src/**/*.test.ts",
      "src/**/*.mock.ts",
      "src/**/mock/**/*",
      "src/**/mocks/**/*",
      "src/**/test/**/*",
      "src/**/tests/**/*"
    ]
  }